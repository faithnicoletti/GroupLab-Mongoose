<%- include('../partials/header') %>
<body>
  <h2>All Fruits</h2>
  <a href="/fruits/new">Create New Fruit</a>
  <ul>
    <%fruits.forEach((fruit)=>{%>
      <li><a href="/fruits/<%=fruit.id%>"><%=fruit.name%></a></li>
      <form action="/fruits/<%=fruit.id%>?_method=DELETE" method="POST">
        <input type="submit" value="X"/>
      </form>
    <%})%>
  </ul>
</body>
</html>

